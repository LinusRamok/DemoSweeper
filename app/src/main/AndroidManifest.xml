<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bat.iron.demosweeper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Game"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".HowToPlay" />
        <activity
            android:name=".SurvivalMode"
            android:screenOrientation="portrait" />
        <activity android:name=".HighScore" />
        <activity
            android:name=".DarkGame"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DarkSurvival"
            android:screenOrientation="portrait" />
        <activity android:name=".MainSettings" />
        <activity
            android:name=".IntroActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DarkHowToPlay"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DarkMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DarkHighScore"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DarkSettings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CustomSetValues"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CustomMode"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DarkCustomMode"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DarkCustomSetValues"
            android:screenOrientation="portrait" />

        <service
            android:name=".MyService"
            android:enabled="true" />

        <activity android:name=".InGameHighScore" />
        <activity android:name=".InGameDarkHighScore" />
        <activity android:name=".InGameHowToPlay" />
        <activity android:name=".InGameDarkHowToPlay" />
        <activity android:name=".AboutUs" />
        <activity android:name=".DarkAboutUs"></activity>
    </application>

</manifest>