<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.bat.iron.demosweeper.MainActivity"
    style="@style/AppTheme">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:background="#131313"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode"
            android:textSize="15dp"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:alpha="0.7"
            android:textColor="#ffffff"
            android:layout_marginTop="6dp"/>

        <View
            android:id="@+id/view"
            android:layout_width="100dp"
            android:layout_height="1px"
            android:background="#ffffff"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:alpha="0.7"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton"
            android:background="@drawable/darktriangleleft"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLASSIC"
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/imageButton"
            android:layout_centerHorizontal="true"
            android:textSize="27dp"
            android:textColor="#ffffff"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton2"
            android:background="@drawable/darktriangleright"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_below="@+id/relativeLayout"
        android:background="#000000"
        android:orientation="vertical"
        android:id="@+id/linear">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EASY"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:textSize="22dp"
            android:clickable="true"
            android:textColor="#ffffff"
            android:alpha="1"
            android:textStyle="normal|bold"
            android:gravity="center"/>

        <View
            android:id="@+id/view2"
            android:layout_width="62dp"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"/>

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MEDIUM"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textSize="22dp"
            android:clickable="true"
            android:alpha="0.5"
            android:textColor="#FFFFFF"
            android:textStyle="normal|bold" />

        <View
            android:id="@+id/view3"
            android:layout_width="90dp"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"/>

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HARD"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textSize="22dp"
            android:clickable="true"
            android:alpha="0.5"
            android:textColor="#FFFFFF"
            android:textStyle="normal|bold" />

        <View
            android:id="@+id/view4"
            android:layout_width="64dp"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"/>

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INSANE"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textSize="22dp"
            android:clickable="true"
            android:alpha="0.5"
            android:textColor="#FFFFFF"
            android:textStyle="normal|bold" />

        <View
            android:id="@+id/view5"
            android:layout_width="86dp"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"
            android:layout_marginBottom="30dp"/>


        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="PLAY"
            android:id="@+id/playbutton"
            android:background="@drawable/darkcircle"
            android:textColor="#ffffff"
            android:textSize="27dp"
            android:layout_gravity="center_horizontal" />



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:id="@+id/rlb"
        android:padding="10dp"
        android:visibility="visible"
        android:layout_below="@+id/linear"
        android:layout_alignParentStart="true"
        android:background="#000000">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/htpbutton"
            android:background="@drawable/darkinfo"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/settingsbutton"
            android:background="@drawable/darksettings"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/hsbutton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/darkhighscore"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlb2"
        android:layout_below="@+id/linear"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:visibility="gone"
        android:background="#131313">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to exit?"
            android:id="@+id/textView43"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_above="@+id/button6"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:text="YES"
            android:id="@+id/button6"
            android:textColor="#ffffff"
            android:background="@drawable/darkbutton"
            android:gravity="center|center_horizontal"
            android:textSize="17dp"
            android:layout_above="@+id/button7"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:text="NO"
            android:id="@+id/button7"
            android:textColor="#ffffff"
            android:background="@drawable/darkbutton"
            android:gravity="center|center_horizontal"
            android:textSize="17dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/button6"
            android:layout_marginBottom="2dp"/>
    </RelativeLayout>

</RelativeLayout>
