<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#e11e4b"
    android:layout_height="match_parent"
    android:id="@+id/settingsrl"

    tools:context="com.bat.iron.demosweeper.MainSettings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:gravity="left"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SETTINGS"
            android:textColor="#000000"
            android:textSize="27dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:id="@+id/textView44"
            android:typeface="monospace" />
    </RelativeLayout>

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="THEME"
        android:textSize="22dp"
        android:textColor="#000000"
        android:id="@+id/button"
        android:layout_marginTop="60dp"
        android:background="@drawable/custombuttonbackground"
        android:layout_below="@+id/relativeLayout7"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="55dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/themebuttom"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="55dp"
        android:background="@drawable/sunlight"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="MUSIC"
        android:id="@+id/button10"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="30dp"
        android:background="@drawable/custombuttonbackground"
        android:textColor="#000000"
        android:textSize="22dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton3"
        android:layout_alignBottom="@+id/button10"
        android:layout_alignEnd="@+id/themebuttom"
        android:background="@drawable/circle"/>

    <Button
        android:id="@+id/button11"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="ABOUT APP"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/custombuttonbackground"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:textSize="22dp"/>


</RelativeLayout>
